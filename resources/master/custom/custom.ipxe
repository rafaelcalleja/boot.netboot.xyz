#!ipxe

goto ${menu} ||

:live_menu
set os Ubuntu Live
menu ${os}
item --gap ${os} Versions
item noble ${space} ${os} 24.04
choose live_version || goto live_exit
menu ${os} ${live_version}
item --gap ${os} Flavors
goto ${live_version}

:noble
item ubuntu-24.04-default-squash-custom ${space} Ubuntu-Custom 24.04 Gnome
goto flavor_select

:flavor_select
choose flavor || goto live_menu
echo ${cls}
goto ${flavor} ||

:ubuntu-24.04-default-squash-custom
set squash_url ${custom_endpoint}/squash/releases/download/rafaelcalleja/distrostore/ubuntu-24.04/filesystem.squashfs
set kernel_url ${custom_endpoint}/squash/releases/download/rafaelcalleja/distrostore/ubuntu-24.04/
goto 24.04-boot

:24.04-boot
imgfree
kernel ${kernel_url}vmlinuz ip=dhcp boot=live fetch=${squash_url}  initrd=initrd.magic ${cmdline}
initrd ${kernel_url}initrd
boot

:live_exit
clear menu
exit 0
